{
  "name": "android-screen",
  "displayName": "Android Screen",
  "description": "View Android device screen directly in VS Code",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/android-screen"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "android-screen-sidebar",
          "title": "Android Screen",
          "icon": "$(device-mobile)"
        }
      ]
    },
    "views": {
      "android-screen-sidebar": [
        {
          "type": "webview",
          "id": "androidScreen.deviceView",
          "name": "Device Screen"
        }
      ]
    },
    "commands": [
      {
        "command": "androidScreen.start",
        "title": "Android Screen: Start",
        "icon": "$(play)"
      },
      {
        "command": "androidScreen.stop",
        "title": "Android Screen: Stop",
        "icon": "$(stop)"
      },
      {
        "command": "androidScreen.restart",
        "title": "Android Screen: Restart",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "androidScreen.start",
          "when": "view == androidScreen.deviceView",
          "group": "navigation@1"
        },
        {
          "command": "androidScreen.stop",
          "when": "view == androidScreen.deviceView",
          "group": "navigation@2"
        },
        {
          "command": "androidScreen.restart",
          "when": "view == androidScreen.deviceView",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}